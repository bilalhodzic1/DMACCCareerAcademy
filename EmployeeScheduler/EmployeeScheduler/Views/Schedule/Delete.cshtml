@model Shifts

@{
    ViewData["Title"] = "Delete shift";
}

<h1 class="display-4">Delete Shift</h1>
<ul class="list-group mb-2">
    <li class="list-group-item">
        <h4>@Model?.StartingHour @Model?.EndingHour</h4>
    </li>
    <li class="list-group-item">
        Employee: @Model?.User.Fullname
    </li>
    <li class="list-group-item">
        Day: @Model?.Days.Name
    </li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ShiftsID" />
    <button type="submit" class="btn btn-dark">Delete</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>