@model IEnumerable<UserLogon>

@{
    ViewData["Title"] = "Employees";
}

<div class="text-center">
    <h1 class="display-4">Employees</h1>
</div>

<a asp-action="Add" class="ml-3">Add Employee</a>

<table class="table">
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (UserLogon user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@user.UserLogonId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

